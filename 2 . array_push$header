<?php
  
  
  header('Content-Type: application/json; charset=utf-8');
/// php header for json আমি এই পুরো php ফাইলটিকে json আকারে দেখতে চাই

  $data = array();
$userInfo['name'] = "A R Shahrear";
$userInfo['mobile'] = "959";
$userInfo['email'] = "@gmail.com";
array_push($data, $userInfo);

//array_push অ্যারের শেষে এক বা একাধিক মান যোগ করতে ব্যবহার করা হয়।

$userInfo['name'] = "sovo";
$userInfo['mobile'] = "688";
$userInfo['email'] = "@email.com";
array_push($data, $userInfo);

echo json_encode($data);

//$data মধ্যে ত সব ঠুকছে .. তাই data কে echo করলাম 
